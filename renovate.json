{
  "extends": ["config:base"],
  "dockerfile": {
    "fileMatch": ["^Dockerfile$"],
    "enabled": true,
    "ignoreTests": true,
    "automergeType": "pr",
    "automerge": true
  },
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": true
    }
  ],
  "automerge": true,
  "automergeType": "branch",
  "enabledManagers": ["dockerfile"],
  "branchRules": [
    {
      "matchBranchName": "main",
      "automerge": true
      "requiredStatusChecks": null
    },
    {
      "matchBranchName": "konflux-internal-poc",
      "automerge": true
      "requiredStatusChecks": null
    }
  ]
}
